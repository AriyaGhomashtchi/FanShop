<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/detail_sale_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/carme"
            android:rotation="-30"
            android:text="on sale"
            android:textSize="100sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/detail_price_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_description_text"
            app:layout_constraintVertical_bias="0.37" />

        <ImageView
            android:id="@+id/detail_fan_image"
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/fan3" />

        <TextView
            android:id="@+id/detail_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/carme"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_fan_image"
            tools:text="Golden Breeze" />

        <TextView
            android:id="@+id/detail_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/detail_name_text"
            app:layout_constraintTop_toBottomOf="@+id/detail_name_text"
            tools:text="fanciest fan to buy in 2023" />

        <TextView
            android:id="@+id/detail_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_description_text"
            tools:text="120.99 Euro" />

        <Button
            android:id="@+id/detail_buy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="buy now"
            app:layout_constraintStart_toStartOf="@+id/detail_price_text"
            app:layout_constraintTop_toBottomOf="@+id/detail_price_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>